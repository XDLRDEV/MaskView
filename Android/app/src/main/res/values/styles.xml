<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--底部导航radioButton的样式-->
    <style name="btn_radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_textcolor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myEditText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColorHint">#42000000</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="colorControlNormal">#42000000</item>
        <item name="colorControlActivated">#4169E1</item>
    </style>

    <style name="resetPriceEditText">
        <item name="android:textSize">26sp</item>
        <item name="android:textColorHint">#42000000</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="colorControlNormal">#42000000</item>
        <item name="colorControlActivated">#4169E1</item>
    </style>


</resources>
